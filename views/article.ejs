    <link href="../stylesheets/customcss.css" rel="stylesheet">
  </head>

  <body>
  <% include navbar %>

    <!-- Main content, inclues sidebar -->
    <div class="main-container">
              <div class="jumbotron">
      <div class="container">
        <h1><%= heading %></h1>
      </div>
    </div>
            <!-- Example row of columns -->
      <div class="col-xs-6 col-sm-1 sidebar-offcanvas" id="sidebar">
      <div class="list-group">
        <a href="#" class="list-group-item active">Common tags</a>
        <input type="text" placeholder="Search" class="form-control search-box">
        <a href="#" class="list-group-item">Tag</a>
        <a href="#" class="list-group-item">Tag</a>
        <a href="#" class="list-group-item">Tag</a>
        <a href="#" class="list-group-item">Tag</a>
      </div>
    </div><!--/.sidebar-offcanvas-->

      <div class="article-container well col-xs-8 col-xs-offset-2 col-md-5 pad-bot-show">
            <a href=<%=url%> >
              <img src=<%=image%>>
            </a>
        <hr>
        <div class="content-text">
        <%- body %>
        </div>
        <hr>
        <div class="tag-list-footer">
        <p>
        <% for(var i=0; i<tags.length; i++){%>
         <span>
          <a href= "/search/<%-tags[i] %>"> <%=tags[i] %></a>
         </span>
        <% } %>
        </p>

        </div>
      </div>


     </div>



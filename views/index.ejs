<div class="main-container">
  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1><%= header %></h1>
      <hr class="header-divider">
    </div>
  </div>

  <div>
    <!-- Example row of columns -->
    <div class="col-xs-6 col-sm-1 sidebar-offcanvas" id="sidebar">
    <div class="list-group">
      <a href="#" class="list-group-item active">Common tags</a>
      <input type="text" placeholder="Search" class="form-control search-box">
      <a href="#" class="list-group-item">Tag</a>
      <a href="#" class="list-group-item">Tag</a>
      <a href="#" class="list-group-item">Tag</a>
      <a href="#" class="list-group-item">Tag</a>
    </div>
  </div>
  <!--/.sidebar-offcanvas-->

  <div class="container">

    <div class="row">
      <div class="col-md-5">
      <% if(results[0]){ %>
        <h2><%= results[0].title %></h2>
        <p><%= results[0].intro %></p>
        <p><a class="btn btn-default" href="/article/<%- results[0].articleID %>" role="button">View more &raquo;</a></p>
      <% } %>
      </div>
      <div class="col-md-5">
      <% if(results[1]){ %>
        <h2><%= results[1].title %></h2>
        <p><%= results[1].intro %></p>
        <p><a class="btn btn-default" href="/article/<%- results[1].articleID %>" role="button">View more &raquo;</a></p>
      <% } %>
      </div>
    </div>
    <hr>

    <% if(results[2]){ %>
    <div class="row">
      <div class="col-md-5">
        <h2><%= results[2].title %></h2>
        <p><%= results[2].intro %></p>
        <p><a class="btn btn-default" href="/article/<%- results[2].articleID %>" role="button">View more &raquo;</a></p>

      </div>
      <div class="col-md-5">
      <% if(results[3]){ %>
        <h2><%= results[3].title %></h2>
        <p><%= results[3].intro %></p>
        <p><a class="btn btn-default" href="/article/<%- results[3].articleID %>" role="button">View more &raquo;</a></p>
      <% } %>
      </div>
    </div>
    <hr>
    <% } %> <!-- end if(results[2]) -->
    <!--page navigation -->
      <div align="center">
        <div class="pagination"><ul class="pagination">
          <li class="prev previous_page <%if(page <= 1){%>disabled<% } %>">
            <a rel="prev start" href="<%=category%>?page=<%=page-1%>">&#8592; Previous</a></li> 
            <!-- Makes a link to each page, setting the current page to active -->
            <% for(var i = 1; i <= numPages; i++){%>
              <li <%if(page == i){%>class="active"<% } %>><a href="<%=category%>?page=<%=i%>"><%=i%></a></li> 
            <% } %>
            <% var nextPage = parseInt(page)+1 %>
            <li class="next next_page <%if(page >= numPages){%>disabled<% } %>"><a href="<%=category%>?page=<%= nextPage %>">Next &#8594;</a></li>
            </ul></div>
      </div>
    <footer>
      <p>&copy; 2017 ECS, VUW.</p>
    </footer>
     <!-- /container -->
   </div>
   </div>
</div>
